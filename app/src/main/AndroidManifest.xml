<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_infobeauty">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".agendamento.AgendamentoServicos"
            android:exported="true" />
        <activity
            android:name=".usuario.TelaNavegacaoCliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".empresa.TelaNavegacaoEmpresa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".empresa.ServicosEmpresas"
            android:screenOrientation="portrait" />
        <activity
            android:name=".usuario.TelaLoginUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".empresa.TelaLoginEmpresa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".usuario.TelaCadastroUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".empresa.TelaCadastroEmpresa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".empresa.TelaEscolhaEmpresa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".usuario.TelaEscolhaUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaInicial"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>