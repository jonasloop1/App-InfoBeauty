<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_infobeauty">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppInfoBeauty">
        <activity android:name=".TelaNavegacao"></activity>
        <activity
            android:name=".TelaLoginUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaLoginEmpresa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaCadastroUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaCadastroEmpresa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaEscolhaEmpresa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaEscolhaUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaInicial"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>