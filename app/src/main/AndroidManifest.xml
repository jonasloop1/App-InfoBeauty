<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.app_infobeauty">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".TelaNavegacaoCliente"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TelaNavegacaoEmpresa"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ServicosEmpresas"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaLoginUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaLoginEmpresa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaCadastroUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaCadastroEmpresa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaEscolhaEmpresa"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaEscolhaUsuario"
            android:screenOrientation="portrait" />
        <activity
            android:name=".TelaInicial"
            android:screenOrientation="portrait" />
        <activity
            android:name=".SplashScreen"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>