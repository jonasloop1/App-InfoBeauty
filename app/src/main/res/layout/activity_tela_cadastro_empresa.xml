<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B5CCCB"
        android:orientation="vertical"
        tools:context=".empresa.TelaCadastroEmpresa">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="50dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/infobeauty_logo1" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="49dp"
            android:text="Nome do estabelecimento:"
            android:textColor="#605A58"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/nomeEmpresa"
            android:layout_width="317dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="ex: Barbemax"
            android:inputType="textPersonName" />


        <TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="49dp"
            android:text="Endereço do estabelecimento:"
            android:textColor="#605A58"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/enderecoEmpresa"
            android:layout_width="317dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="Endereço"
            android:inputType="textPersonName" />
        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="49dp"
            android:text="E-mail:"
            android:textColor="#605A58"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/emailEmpresa"
            android:layout_width="317dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="BarberMax13@gmail.com"
            android:inputType="textEmailAddress" />


        <TextView
            android:id="@+id/textView18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CNPJ:"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="49dp"
            android:textColor="#605A58"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/cnpjEmpresa"
            android:layout_width="317dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="05.537.340/0001-70"
            android:inputType="textPersonName" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Digite sua senha:"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="49dp"
            android:textColor="#605A58"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/senhaEmpresa"
            android:layout_width="317dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="***************"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Repita sua senha:"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="49dp"
            android:textColor="#605A58"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/confirmasenhaEmpresa"
            android:layout_width="317dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="***************"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/proximoEmpresaCadastro"
            android:layout_width="317dp"
            android:layout_height="49dp"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:onClick="Inserir_empresa"
            android:text="Cadastrar"
            app:backgroundTint="#605A58" />


    </androidx.appcompat.widget.LinearLayoutCompat>
</ScrollView>